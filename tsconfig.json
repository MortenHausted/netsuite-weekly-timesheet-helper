{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "esnext",
        "typeRoots": ["./node_modules/@types"],
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "rootDir": "src",
        "outDir": "dist/js",
    },
    "exclude": ["./webpack/webpack.config.js"],
    "include": ["src/", "public"]
}
